{
  "extends": [
    "config:js-app",
    ":maintainLockFilesWeekly",
    ":prNotPending"
  ],
  "packageRules": [
    {
      "packagePatterns": [
        "*"
      ],
      "rangeStrategy": "pin"
    },
    {
      "depTypeList": [
        "engines",
        "devDependencies"
      ],
      "rangeStrategy": "replace"
    },
    {
      "packagePatterns": [
        "react-cookie",
        "universal-cookie",
        "universal-cookie-express"
      ],
      "groupName": "reactivestack/cookies"
    },
    {
      "packagePatterns": ["@loadable/*"],
      "groupName": "loadable components"
    }
  ]
}
